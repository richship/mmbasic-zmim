' TODO: extract constants for shifts, e.g.
' SHIFT_1_BIT = 2
' SHIFT_2_BIT = 4
Function rshift(v, num)
  rshift = v\(2^num)
End Function

Function hex2$(x)
  If byte <= &hF Then hex2$ = "0"
  hex2$ = hex2$ + Hex$(x)
End Function

Function lpad$(s$, i, c$)
  Local a
  a = Len(s$)
  If c$ = "" Then c$ = " "
  If a < i Then lpad$ = String$(i - a, c$) + s$ Else lpad$ = s$
End Function

Function rpad$(s$, i, c$)
  Local a
  a = Len(s$)
  If c$ = "" Then c$ = " "
  If a < i Then rpad$ = s$ + String$(i - a, c$) Else rpad$ = s$
End Function
